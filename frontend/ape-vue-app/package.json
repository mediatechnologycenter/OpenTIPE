{
  "name": "ape-vue-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit --coverage",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@firebase/auth": "^0.17.2",
    "@heroicons/vue": "^1.0.5",
    "@tiptap/core": "^2.0.0-beta.128",
    "@tiptap/extension-character-count": "^2.0.0-beta.18",
    "@tiptap/starter-kit": "^2.0.0-beta.130",
    "@tiptap/vue-3": "^2.0.0-beta.72",
    "clipboard-polyfill": "^3.0.3",
    "core-js": "^3.19.0",
    "diff": "^5.0.0",
    "firebase": "^9.1.3",
    "loglevel": "^1.7.1",
    "lorem-ipsum": "^2.0.4",
    "prosemirror-model": "^1.15.0",
    "prosemirror-state": "^1.3.4",
    "prosemirror-view": "^1.20.3",
    "scroll-into-view-if-needed": "^2.2.28",
    "smooth-scroll-into-view-if-needed": "^1.1.32",
    "uuid": "^8.3.2",
    "vue": "^3.2.21",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@types/diff": "^5.0.1",
    "@types/jest": "^24.0.19",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vue/cli-plugin-babel": "^4.5.14",
    "@vue/cli-plugin-eslint": "^4.5.14",
    "@vue/cli-plugin-router": "^4.5.14",
    "@vue/cli-plugin-typescript": "^4.5.14",
    "@vue/cli-plugin-unit-jest": "^4.5.14",
    "@vue/cli-service": "^4.5.14",
    "@vue/compiler-sfc": "^3.2.20",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-rc.16",
    "autoprefixer": "^9.8.8",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-vue": "^7.20.0",
    "postcss": "^7.0.39",
    "sass": "^1.43.3",
    "sass-loader": "^8.0.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17",
    "typescript": "~4.1.5",
    "vue-jest": "^5.0.0-0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/airbnb",
      "@vue/typescript"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn"
          ]
        }
      ],
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": "error",
      "max-len": "off",
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": true
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "resolutions": {
    "prosemirror-model": "1.13.1",
    "prosemirror-view": "1.16.5"
  }
}
